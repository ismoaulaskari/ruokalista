<h1>Listing foods</h1>

<p>
<%= link_to 'New food', new_food_path %>
</p>
<table>
  <tr>
    <th>Week</th>
    <th>Name</th>
    <th>Meatiness</th>
  </tr>

<% @foods.each do |food| %>
  <tr>
    <td><%=h food.week %></td>
    <td><%=h food.name %></td>
    <td><%=h food.meatiness %></td>
    <td><%= link_to 'Show', food %></td>
    <td><%= link_to 'Edit', edit_food_path(food) %></td>
    <td><%= link_to 'Destroy', food, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

