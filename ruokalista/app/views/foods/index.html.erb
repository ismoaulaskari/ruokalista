<h1>Listing foods</h1>

<p>
<%= link_to 'New food', new_food_path %>
</p>
<table>
  <tr>
    <th>Week</th>
    <th>Name</th>
    <th>Meatiness</th>
  </tr>

<% i = 0 %>
<% @foods.each do |food| %>
  <% if food.week == 0 %>
    <tr>
      <td><i>Party food</i></td>
      <td><%=h food.name %></td>
      <td class="<%=h food.meatiness %>"><%=h food.meatiness %></td>
      <td><%= link_to 'Show', food %></td>
      <td><%= link_to 'Edit', edit_food_path(food) %></td>
      <td><%= link_to 'Destroy', food, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
 
  <% elsif food.week != 0 %>
    <% i = i +1 %>
    <% if (i+4) % 5 == 0 %>
      <tr><td span="6"/></tr>
      <tr><td span="6"/></tr>
      <tr><td span="6"/></tr>
      <tr><td span="6"/></tr>
    <% end %>
    <tr>
      <td><%=h food.week %></td>
      <td><%=h food.name %></td>
      <td class="<%=h food.meatiness %>"><%=h food.meatiness %></td>
      <td><%= link_to 'Show', food %></td>
      <td><%= link_to 'Edit', edit_food_path(food) %></td>
      <td><%= link_to 'Destroy', food, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
<% end %>
</table>

<br />

<%= link_to 'New food', new_food_path %>
